@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="display-4" style="text-align:center;">Worst Fit</h1>
<div class="container w-50">
    <form asp-page-handler="BestFit" method="post">
        <div class="form-group">
            <label for="blocksStr">Enter blocks: * * * * *</label>
            <input type="text" name="blocksStr" class="form-control" id="blocksStr">
        </div>
        <div class="form-group">
            <label for="processesStr">Enter processes: * * * * *</label>
            <input type="text" name="processesStr" class="form-control" id="processesStr">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@{
    if (Model.WorstFitModels.Count != 0)
    {
        string inputProcessesStr = "";
        foreach (var str in Model.InputProcesses) inputProcessesStr += (" {" + str + "}; ");
        string inputBlocksStr = "";
        foreach (var str in Model.InputBlocks) inputBlocksStr += ("{ " + str + "}");
        <h3 class="text-dark text-center" style="margin-top:100px;">Input processes: @inputProcessesStr</h3>
        <h3 class="text-dark text-center">Input blocks: @inputBlocksStr</h3>

        <div class="container d-flex justify-content-center">
            <table class="table alert-succes bg-info w-50">
                <thead>
                    <tr>
                        <th scope="col">Process Number</th>
                        <th scope="col">Process size</th>
                        <th scope="col">Block number</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.WorstFitModels)
                    {
                        <tr class="table-info">
                            <th scope="row">@i.ProcessNo</th>
                            <td>@i.ProcessSize</td>
                            <td>@i.BlockNo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

